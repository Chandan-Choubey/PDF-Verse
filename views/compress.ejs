<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PDF Compression Tool</title>

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico" />

    <!-- External CSS and JS -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/blueimp-file-upload/10.7.0/css/jquery.fileupload.min.css"
    />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/blueimp-file-upload/10.7.0/js/jquery.fileupload.min.js"></script>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
    <link
      href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css"
    />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/merger.css" />
  </head>
  <body>
    <!-- Include Navigation -->
    <%- include('includes/nav.ejs') %>

    <!-- Main Container for PDF Compression Tool -->
    <div class="container main-container" style="width: 90%">
      <h1 class="text-center mt-5 font-weight-bold pt-4 heading-main">
        PDF Compression Tool
      </h1>
      <h5 class="text-center mt-3 font-weight-bold heading-main">
        Compress large PDF files with ease
      </h5>
      <div class="row justify-content-center mt-5">
        <div class="col-md-10 text-center">
          <form
            method="POST"
            enctype="multipart/form-data"
            action="/compress"
            id="pdf-dropzone"
          >
            <div class="fallback">
              <div class="custom-file-upload custom-file-upload-color-1">
                <img
                  src="/images/pdf.png"
                  alt="PDF Icon"
                  width="72"
                  height="72"
                />
                <label for="pdfFile">Choose PDF File</label>
                <input
                  type="file"
                  name="pdfFile"
                  id="pdfFile"
                  accept=".pdf"
                  required
                  class="form-control-file"
                />
              </div>
              <br /><br />
            </div>
            <input
              type="submit"
              value="Compress PDF"
              class="btn-lg common-btn pl-5 pr-5 mb-5 mt-2"
            />
          </form>
          <div class="container">
            <div class="pdfhead mt-4 text-center mb-3"></div>
            <ul id="pdf-list" class="list-group mb-4"></ul>
            <div class="row"></div>
          </div>
        </div>
      </div>
    </div>

    <!-- Include All Tools Section -->
    <%- include('includes/alltools.ejs') %>

    <!-- Include Services Section -->
    <%- include('includes/services.ejs') %>

    <!-- Include How To Section -->
    <%- include('includes/howto.ejs') %>

    <!-- Include Footer Section -->
    <%- include('includes/footer.ejs') %>

    <!-- External JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
  </body>
</html>
