<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PDF Compression Tool</title>

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico" />

    <!-- External CSS and JS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/merger.css" />
  </head>
  <body>
    <!-- Include Navigation -->
    <%- include('includes/nav.ejs') %>

    <!-- Main Container for PDF Compression Tool -->
    <div class="container main-container" style="width: 90%">
      <h1 class="text-center mt-5 font-weight-bold pt-4 heading-main">
        PDF Compression Tool
      </h1>
      <h5 class="text-center mt-3 font-weight-bold heading-main">
        Compress large PDF files with ease
      </h5>
      <div class="row justify-content-center mt-5">
        <div class="col-md-10 text-center">
          <form method="POST" enctype="multipart/form-data" action="/compress">
            <div class="custom-file-upload">
              <img
                src="/images/pdf.png"
                alt="PDF Icon"
                width="72"
                height="72"
              />
              <label for="pdfFile">Choose PDF File</label>
              <input
                type="file"
                name="pdfFile"
                id="pdfFile"
                accept=".pdf"
                required
                class="form-control-file"
              />
            </div>
            <br /><br />
            <input
              type="submit"
              value="Compress PDF"
              class="btn-lg common-btn pl-5 pr-5 mb-5 mt-2"
            />
          </form>
        </div>
      </div>
    </div>

    <!-- Include Additional Sections -->
    <%- include('includes/alltools.ejs') %> <%- include('includes/services.ejs')
    %> <%- include('includes/howto.ejs') %> <%- include('includes/footer.ejs')
    %>

    <!-- External JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
  </body>
</html>
